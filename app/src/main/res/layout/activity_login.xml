<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fromAlpha="0.0" android:toAlpha="1.0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.LoginActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/Logo_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:foregroundGravity="center"
        app:srcCompat="@drawable/logo_taetech_vermelho"
        android:layout_marginEnd="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <TextView
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_email"
            android:textColor="@color/colorAccent"
            android:fontFamily=""
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"/>


        <EditText
            android:id="@+id/edt_email"
            style="@android:style/Widget.Material.Light.AutoCompleteTextView"
            android:layout_width="300dp"
            android:layout_height="38dp"
            android:background="@drawable/oval"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/txt_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_senha"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/edt_pass"
            style="@android:style/Widget.Material.Light.AutoCompleteTextView"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/oval"
            android:ems="10"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="@color/colorAccent"/>
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/bt_entrar"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="@string/bt_entrar"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/bt_rounder"
            android:layout_gravity="center"/>


    </LinearLayout>



</LinearLayout>